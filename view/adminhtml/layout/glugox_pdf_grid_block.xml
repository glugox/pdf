<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="glugox_pdf.main">
            <block class="Glugox\PDF\Block\Adminhtml\PDF\Grid" name="glugox.pdf.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">pdfGrid</argument>
                    <argument name="dataSource" xsi:type="object">Glugox\PDF\Model\ResourceModel\PDF\Collection</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="default_sort" xsi:type="string">pdf_id</argument>
                    <argument name="default_dir" xsi:type="string">asc</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/grid">
                        <param name="_current">1</param>
                    </argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="glugox.pdf.grid.columnSet">
                    <arguments>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string"/>
                        </argument>
                        <argument name="empty_text" xsi:type="string" translate="true">No PDFs Found</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Name</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">name</argument>
                            <argument name="id" xsi:type="string">name</argument>
                            <argument name="renderer" xsi:type="string">Glugox\PDF\Block\Adminhtml\Widget\Grid\Column\Renderer\Name</argument>
                            <argument name="escape" xsi:type="string">1</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="source_definition">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Source Definition</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">source_definition</argument>
                            <argument name="id" xsi:type="string">source_definition</argument>
                            <argument name="renderer" xsi:type="string">Glugox\PDF\Block\Adminhtml\Widget\Grid\Column\Renderer\Name</argument>
                            <argument name="escape" xsi:type="string">1</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="edit">
                        <arguments>
                            <argument name="renderer" xsi:type="string">Glugox\PDF\Block\Adminhtml\Widget\Grid\Column\Renderer\Button\Edit</argument>
                            <argument name="index" xsi:type="string">edit</argument>
                            <argument name="id" xsi:type="string">edit</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="delete">
                        <arguments>
                            <argument name="renderer" xsi:type="string">Glugox\PDF\Block\Adminhtml\Widget\Grid\Column\Renderer\Button\Delete</argument>
                            <argument name="class" xsi:type="string">action delete</argument>
                            <argument name="index" xsi:type="string">delete</argument>
                            <argument name="id" xsi:type="string">delete</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
